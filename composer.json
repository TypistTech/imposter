{
    "name": "typisttech/imposter",
    "type": "library",
    "description": "Change package dependency namespaces inside a WordPress plugin",
    "keywords": [
        "wordpress"
    ],
    "homepage": "https://www.typist.tech/projects/imposter",
    "license": "MIT",
    "authors": [
        {
            "name": "Typist Tech",
            "email": "imposter@typist.tech",
            "homepage": "https://www.typist.tech"
        },
        {
            "name": "Tang Rufus",
            "email": "tangrufus@gmail.com",
            "homepage": "https://www.typist.tech",
            "role": "Developer"
        }
    ],
    "require": {
        "php" : "^7.0"
    },
    "require-dev": {
        "squizlabs/php_codesniffer": "^2.3"
    },
    "autoload": {
        "psr-4": {
            "TypistTech\\Imposter\\": "src"
        }
    },
    "scripts": {
        "check-style": "phpcs -p --standard=PSR2 --runtime-set ignore_errors_on_exit 1 --runtime-set ignore_warnings_on_exit 1 src tests",
        "fix-style": "phpcbf -p --standard=PSR2 --runtime-set ignore_errors_on_exit 1 --runtime-set ignore_warnings_on_exit 1 src tests",
        "pre-tag": [
            "composer update",
            "doctoc README.md",
            "github_changelog_generator --no-verbose"
        ]
    },
    "config": {
        "sort-packages": true
    }
}
